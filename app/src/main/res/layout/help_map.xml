<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="5dp"
            android:text="Instruction to find path between Your location and Garage Location"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:paddingBottom="5dp"
            android:text="Note: Internet should be enabled." />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="15dp"
            android:text="1. Click on Star Garage's location" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="188dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="28dp"
            android:src="@drawable/click_me" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="15dp"
            android:text="2.Then following icons appears to the bottom right corner of map and click on first one." />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="28dp"
            android:src="@drawable/get_direction" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="15dp"
            android:text="3.Enable GPS according to instruction." />

    </LinearLayout>
</ScrollView>